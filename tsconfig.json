{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@db/*" : ["src/database/*"],
      "@common/*": ["src/common/*"],
      "@error/*": ["src/error/*"],
      "@location/*": ["src/location/*"],
      "@route/*": ["src/route/*"],
      "@user/*": ["src/user/*"],
      "@ws/*": ["src/ws/*"],
      "@mock/*": ["mock/*"],
    }
  }
}
